<?xml version="1.0" encoding="utf-8"?>
<UserControl
  x:Class="Xbox360MemoryCarver.App.HexMinimapControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:Xbox360MemoryCarver.App"
>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Legend (populated dynamically from FileTypeColors.LegendCategories) -->
    <Border
      Grid.Row="0"
      Background="#FF1E1E1E"
      Padding="4,2"
      CornerRadius="2"
      Margin="0,0,0,4"
    >
      <StackPanel
        x:Name="LegendPanel"
        Orientation="Horizontal"
        Spacing="8"
        HorizontalAlignment="Center"
      />
    </Border>

    <!-- Minimap Canvas -->
    <Border
      Grid.Row="1"
      Background="#FF2D2D2D"
      CornerRadius="4"
      Padding="2"
    >
      <Canvas
        x:Name="MinimapCanvas"
        Background="#FF252526"
      />
    </Border>
  </Grid>
</UserControl>
